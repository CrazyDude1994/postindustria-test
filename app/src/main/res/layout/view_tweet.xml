<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="@dimen/view_tweet_padding">

    <ImageView
        android:id="@+id/view_tweet_avatar"
        android:layout_width="@dimen/view_tweet_avatar_width_height"
        android:layout_height="@dimen/view_tweet_avatar_width_height"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_tweet_favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:tint="@color/colorAccent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_tweet_text_block_left_margin"
            android:layout_toLeftOf="@id/view_tweet_favorite_button"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_tweet_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.wordpress.priyankvex.smarttextview.SmartTextView
                android:id="@+id/view_tweet_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>